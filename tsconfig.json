{
  "compilerOptions": {
    "resolveJsonModule": true,
    "baseUrl": "./",
    "outDir": "./dist",
    "target": "ESNext",
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "files": ["shims.d.ts"],
  "include": [
    "src/",
    "eslint.config.ts",
    "prettier.config.mjs",
    "jest.config.ts"
  ]
}
